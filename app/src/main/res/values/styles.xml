<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_wh">
        <item name="android:background">@drawable/button_wh</item>
        <item name="android:fontFamily">@font/lexend_bold</item>
        <item name="android:textSize">@dimen/text_subheader_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">@dimen/view_margin</item>
        <item name="android:layout_marginLeft">@dimen/view_margin</item>
        <item name="android:layout_marginRight">@dimen/view_margin</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="text_large">
        <item name="android:textSize">@dimen/text_large_text_size</item>
        <item name="android:fontFamily">@font/lexend_medium</item>
        <item name="android:textColor">@color/font_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="text_extra_large">
        <item name="android:textSize">@dimen/text_large_text_size</item>
        <item name="android:fontFamily">@font/lexend_extra_bold</item>
        <item name="android:textColor">@color/font_color</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="text_sub_header">
        <item name="android:textSize">@dimen/text_subheader_text_size</item>
        <item name="android:fontFamily">@font/lexend_regular</item>
        <item name="android:textColor">@color/font_color</item>

    </style>

    <style name="text_small">
        <item name="android:textSize">@dimen/text_regular_text_size</item>
        <item name="android:fontFamily">@font/lexend_regular</item>
        <item name="android:textColor">@color/font_color</item>

    </style>
    <style name="text_extra_small">
        <item name="android:textSize">@dimen/text_regular_small_text_size</item>
        <item name="android:fontFamily">@font/lexend_regular</item>
        <item name="android:textColor">@color/font_color</item>

    </style>
    <style name="input_box">
        <item name="android:textSize">@dimen/text_subheader_text_size</item>
        <item name="android:fontFamily">@font/lexend_medium</item>
        <item name="android:textColor">@color/font_color</item>
        <item name="android:background">@drawable/radius_bar</item>
        <item name="android:layout_marginTop">@dimen/edittext_margin_top</item>
        <item name="android:layout_marginRight">@dimen/edittext_margin_right</item>
        <item name="android:layout_marginLeft">@dimen/edittext_margin_left</item>
        <item name="android:maxWidth">40dp</item>
        <item name="android:minLines">1</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>